@page "/europe"

<h3>European Union Countries and Capitals</h3>

<MojWlasnyKomponent Color="blue" />

<table class="country-table">
    <thead>
        <tr>
            <th>Country</th>
            <th>Capital</th>
            <th>Flag</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Countries)
        {
            <tr>
                <td>@country.Name</td>
                <td>@country.Capital</td>
                <td><img src="@country.ImageUrl" alt="@country.Name" class="country-image" /></td>
            </tr>
        }
    </tbody>
</table>

